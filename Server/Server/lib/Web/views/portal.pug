block Subject
	title= '글자에 즐거움을 더합니다. 끄투닷플러스.'

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block Middle
	+separator(5)
	div(style='float: left; width: 100%; margin-top: 20px;')
		div(style='float: left; padding-left: 70px;')
			h3#holder   
		.jjoriping(style='margin-top: 20px;')
			button#game-start.jjo-display <i class="fas fa-gamepad"></i> 게임 시작!
			button#portal-menu.jjo-display(onclick="window.open('https://discord.gg/k9wJkQmKvY')") <i class="fab fa-discord"></i> 디스코드
			button#portal-menu.jjo-display(onclick="window.open('https://www.youtube.com/channel/UC8ilnw7nSBiZOn-Fx-XaAeA')") <i class="fab fa-youtube"></i> 유튜브
	div#banner
		img(src='https://kakaoplus.b-cdn.net/banner.png')
	div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list
	div(style='float: right; margin-top: -120px; width: 50%;')
	div(style='float: right; width: 645px; border: 2px solid rgba(0,0,0,0.5); margin-top: 81px; background-color: rgba(0,0,0,0.2);')
		div#name <i class="fas fa-history"></i> 업데이트 내역
		iframe#kkutu-bulletin(width='100%', height='400px', src='/kkutu_update.html')
	div(style='float: left; width: 336px; height: 212px; border: 2px solid rgba(0,0,0,0.5); margin-top: 10px; background-color: rgba(0,0,0,0.2);')
		div#name(style='width:calc(101.5% - 4px);') <i class="fas fa-bullhorn"></i> 공지사항
		iframe#kkutu-bulletin(width='100%', height='180px', src='/kkutu_bulletin.html')
	div(style='float: left; width: 336px; height: 204px; border: 2px solid rgba(0,0,0,0.5); margin-top: 10px; background-color: rgba(0,0,0,0.2);')
		div#namebox
			div#name(style='width:calc(101.5% - 4px);') <i class="fas fa-ad"></i> 광고
		div#minibanner1
			img(src='https://kakaoplus.b-cdn.net/minibanner1.png' onclick="window.open('https://www.twitch.tv/butterbutter3260')")
		div#minibanner2
			img(src='https://kakaoplus.b-cdn.net/minibanner2.png' onclick="window.open('https://www.youtube.com/channel/UCJsTzvIREZdQmufeF8KvT2A')")
	+separator(10)
